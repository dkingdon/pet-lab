<%= form_for @owner do |f| %>
  <div class="form-group">
    <%= f.text_field :first_name, class: "form-control", :required => true, placeholder: "First Name", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.text_field :last_name, class: "form-control", :required => true, placeholder: "Last Name" %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, class: "form-control", :required => true, placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.telephone_field :phone, class: "form-control", :required => true,  placeholder: "Phone Number" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save Owner", class: "btn btn-block btn-success" %>
  </div>
<% end %>
